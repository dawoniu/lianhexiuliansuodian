.box {
  padding: 10px 10px;
  margin-bottom: 70px;
}
.box .item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 40px;
  line-height: 40px;
}
.box .item .name {
  width: 80px;
  font-size: 14px;
  font-weight: bold;
}
.box .item .input {
  width: calc(100% - 100px);
}
.box .item .input input {
  height: 40px;
  line-height: 40px;
}
.box .item .input button {
  width: 80px;
  display: inline-block;
  font-size: 12px;
  margin: 0 10px 0 0;
  color: #000000;
  background-color: #C6C6C6;
  height: 30px;
  border-radius: 15px;
}
.box .item .input .active {
  background-color: #257AFA;
  color: #fff;
}
.box .item .entry {
  width: 20px;
  text-align: right;
}
.foot {
  padding-top: 50px;
  width: 70%;
  margin: 0 auto;
}
.foot button {
  margin: 10px;
  font-size: 16px;
  line-height: 40px;
  height: 40px;
  color: #fff;
  background-color: #257AFA;
  border-radius: 20px;
}
.foot .delete {
  color: #F90000;
  background-color: #fff;
  border: 1px solid rgba(0, 0, 0, 0.2);
}

