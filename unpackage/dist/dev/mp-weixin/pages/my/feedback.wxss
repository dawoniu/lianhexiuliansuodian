/* pages/my/feedback.wxss */
page{
  background-color: #f7f7f7;
  font-size: 12px;
}
.main{
  padding: 10px;
  background-color: #fff;
}
.title{
  color: #333333;
  font-weight: bold;
}
textarea{
  border: 1px #e4e4e4 solid;
  width: calc(100% - 18px);
  padding: 8px;
  line-height: 20px;
  height: 100px;
  margin-top: 10px;
}
.submit{
  background-color: #fff;
  border-top: 1px #e5e5e5 solid;
  padding: 10px 20px;
  position: fixed;
  bottom: 0;
  width: calc(100% - 42px);
}
button{
  background-color: #03b3ff;
  color: #fff;
  font-size: 16px;
}

