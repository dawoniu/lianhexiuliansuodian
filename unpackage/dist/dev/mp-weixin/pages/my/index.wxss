.main {
  padding: 0 15px;
}
.main .user {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-top: 15px;
}
.main .user .thumb {
  width: 60px;
  padding-right: 12px;
}
.main .user .thumb image {
  width: 100%;
  border-radius: 50%;
}
.main .user .right {
  line-height: 20px;
  padding-top: 10px;
}
.main .user .right .name {
  font-size: 16px;
}
.main .user .right .help {
  color: #676767;
  font-size: 12px;
}
.main .line {
  padding-top: 15px;
}
.main .line image {
  border-radius: 10px;
  width: 100%;
}
.main .tab {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  text-align: center;
  background-color: #FFFFFF;
  border-radius: 10px;
  padding: 10px 0;
  margin-top: 15px;
}
.main .tab .thumb image {
  width: 30px;
}
.main .order {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  background-color: #FFFFFF;
  padding: 15px 10px;
  margin-top: 15px;
  border-radius: 10px;
}
.main .order .left {
  font-size: 16px;
}

